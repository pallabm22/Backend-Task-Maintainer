<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <form action="/create" method="post">
          <input
            class="block w-full px-5 py-2 bg-zinc-800 text-white rounded"
            type="text"
            placeholder="Title goes here"
            name="title"
          />
          <textarea
            class="block w-full px-5 py-2 resize-none bg-zinc-800 text-white rounded-md mt-2"
            placeholder="Put task details here"
            name="details"
          ></textarea>
          <input
            class="mt-2 px-5 py-2 bg-blue-600 text-white rounded-md cursor-pointer"
            type="submit"
            value="Create task"
          />
        </form>
      </div>
      <div class="tasks flex gap-4 p-10">
        <% if (files.length > 0) { %> <% files.forEach((val) => { %>
        <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md">
          <h1 class="text-white text-3xl tracking-tighter"><%=val%></h1>
          <a
            class="text-blue-500 inline-block mt-3"
            href="/files/<%=val%>"
            >Read more</a
          >
        </div>
        <% }) %> <% } else { %>
        <h2 class="text-blue-300">No task yet</h2>
        <% } %>
      </div>
    </div>
  </body>
</html>
